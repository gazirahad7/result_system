<%- include("../template/header"); -%> <%- include("../template/layout"); -%>

<div class="container my-ml">
  <div class="main-form">
    <div class="form-div box">
      <form action="/update" method="POST" class="control">
        <h1
          class="has-text-centered is-size-4 has-background-primary-light has-text-weight-bold"
        >
          Edit Student Form
        </h1>

        <div class="control">
          <label class="label">Student Semester:</label>
          <select name="stSemester" class="select">
            <!-- <option disabled selected>Choose semester</option> -->

            <% showSemester.map(ele =>{ %>
            <option value="<%= ele.se_id %>">
              <%= ele.se_season + ' ' + ele.se_year %>
            </option>

            <% }) %>
          </select>
        </div>
        <div>
          <label class="label">Student ID:</label>
          <input
            type="number"
            class="input is-normal"
            name="stId"
            id="stID"
            onblur="getStID(event)"
            placeholder="Enter student ID"
            value="<%= showSt.st_ID %>"
            required
          />

          <div id="on-input"></div>
        </div>

        <div>
          <label class="label">Student Name:</label>
          <input
            type="text"
            class="input is-normal"
            name="stName"
            placeholder="Enter student name"
            value="<%= showSt.st_name %>"
            required
          />
        </div>

        <div>
          <label class="label">Student Email:</label>
          <input
            type="email"
            name="stEmail"
            class="input is-normal"
            placeholder="Enter student email"
            value="<%= showSt.st_email %>"
            required
          />
        </div>

        <div>
          <label class="label">Student Phone:</label>
          <input
            type="number"
            name="stPhone"
            class="input is-normal"
            placeholder="Enter student phone number"
            value="<%= showSt.st_phone %>"
            required
          />
        </div>

        <div>
          <label class="label">Student Address:</label>
          <input
            type="text"
            name="stAddress"
            class="input is-normal"
            placeholder="Enter student address"
            value="<%= showSt.st_address %> "
            required
          />
        </div>

        <input type="hidden" name="studentID" value="<%= showSt.stId %>" />
        <button
          class="button mt-3 is-warning has-text-dark is-rounded has-text-weight-bold"
          type="submit"
        >
          Submit
        </button>
      </form>
    </div>
  </div>
  <script src="/js/addSt.js"></script>
</div>

<%- include("../template/footer"); -%>
